page {
    width: 750rpx;
    height: 100%;
    position: relative;
}

.text {
    width: 100px;
    height: 100px;
    border: 1px solid red;
    transform: rotate(90deg);
}

.tuxing {
    transform: rotate(90deg);
    /* border: 1px solid red; */
    /* position: absolute; */
    width: 820rpx;
    height: 660rpx;
    margin: 90rpx auto 0 -30rpx;
    /* border: 1px solid red; */
}

.tuxing image {
    width: 820rpx;
    height: 660rpx;
}

.btns-data {
    transform: rotate(90deg);
    /* position: absolute; */
    /* left: 160rpx; */
    /* bottom: -160rpx; */
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 700rpx;
    margin-top: -80rpx;
}

.btn-text {
    margin-left: -100rpx;
    font-size: 30rpx;
    color: #faf8f8;
}

.bg-contorl {
    width: 300rpx;
    height: 100rpx;
    z-index: 99;
    text-align: center;
    line-height: 70rpx;
    margin-left: 120rpx;
}

.connect {
    background: url("https://img.vim-cn.com/1f/d4090010db92a372d2f8e3c23fa7cfe3881785.png");
    background-size: 200rpx;
    background-repeat: no-repeat;
}

.start {
    background: url("https://img.vim-cn.com/3c/fdfd9ccfe09e1153892008c3e20ec8e210d8c6.png");
    background-size: 200rpx;
    background-repeat: no-repeat;
}

.check {
    background: url("https://img.vim-cn.com/c8/d5068d432131b2d2714b9710850ba223c98fad.png");
    background-size: 200rpx;
    background-repeat: no-repeat;
}

.play-back {
    background: url("https://img.vim-cn.com/e1/0515f430845a670dc9675ec55f7cf7d3e5b7ec.png");
    background-size: 200rpx;
    background-repeat: no-repeat;
}

.data-text {
    width: 150rpx;
    font-size: 35rpx;
}

.gain, .speed, .bmp {
    width: 320rpx;
    border: 1rpx solid #999999;
    padding: 0 0 0 20rpx;
    margin-top: 40rpx;
}

.gain-data, .speed-data, .bmp-data {
    font-size: 30rpx;
}

.gain, .speed, .bmp {
    display: flex;
}

.gain-data-outer, .speed-data-outer, .bmp-data-outer {
    border-left: 1rpx solid #e2ddd9;
    width: 170rpx;
    text-align: center;
    margin-left: 20rpx;
}