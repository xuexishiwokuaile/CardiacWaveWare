/* pages/login/login.wxss */

page{ 
    width: 100%;
    height: 100%;
    font-family: 'STxihei';
    position: relative;
}
.outer{
    margin: auto 0; 
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.header{
    width: 100%;
    position: absolute;
    top: 0rpx;
}
.login-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 34rpx;
}

.footer{
    position: absolute;
    bottom: 10rpx;
    width: 100%;
}
.logo{
    margin-bottom: 20rpx
}
.logo image{
    width: 210rpx;
    height: 210rpx;
}

.login-name-text,
.login-pwd-text{
    line-height: 34rpx;
    height: 34rpx;
}

.inputText{
    font-size: 28rpx;
    line-height: 28rpx;
    height: 28rpx;
    border: 1rpx solid #f0f0f0;
    border-radius: 8rpx;
    padding: 4rpx 0 4rpx 16rpx;
    width: 400rpx;
}
.placeholder-text{
    color: #b2b2b2;
}
.login-input-outer{
    display: flex;
    align-items: center;
    margin-top: 40rpx
}
.login-name-text,
.login-pwd-text{
    margin-right: 20rpx
}

.register-link{
    margin-top: 40rpx;
    font-size: 26rpx;
    text-align: center;
}
.to-register{
    color: #5099ff;
}

.btn-area {
    padding: 10rpx 0;
    height: 66rpx;
    width: 496rpx;
    margin-top: 40rpx
}

.btn-area button {
    border-radius: 40rpx;
    background-color: #5099ff;
    color: #ffffff;
    font-size: 30rpx;
    border-color: #5099ff;
}