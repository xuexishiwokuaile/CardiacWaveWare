/* pages/register/register.wxss */
page{ 
    width: 100%;
    height: 100%;
    position: relative;
}
.outer{
    /* margin: auto 0;  */
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    justify-content: center;
}
.header{
    width: 100%;
    position: absolute;
    top: 0rpx;
}
.register-container{
    /* margin-top: 170rpx */
}

.footer{
    position: absolute;
    bottom: 10rpx;
    width: 100%;
}
.role-selection {
    position: absolute;
    top: 200rpx;
    left: 120rpx;
    display: flex;
    justify-content: center;
}

.role-selection .user image, .role-selection .doctor image {
    width: 128rpx;
    height: 162rpx;
    margin: 46rpx 65rpx 0 65rpx;
}
/* 角色选择 */
.role-selection{
    margin-bottom: 10rpx;
}
/* 表单的内容 */
.input-text{
    font-size: 32rpx;
}
.form-items-outer {
    width: 750rpx;
    /* border: 1rpx solid red; */
    
}
.user-form-outer{
    margin-top: 400rpx;
}
.doctor-form-outer{
    margin-top: 264rpx;
}

.form-items {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    margin-left: 9%
}

.form-item {
    display: flex;
    width: 620rpx;
    /* border: 1rpx solid blue; */
    margin-bottom: 30rpx;
    justify-content: space-between
}
.item{
    display: flex;
}

.form-item-title {
    color: #222222;
    font-size: 32rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-right: 20rpx;
}

/* placeholder-class */

.placeholder-text {
    color: #b2b2b2;
    font-size: 28rpx;
    line-height: 28rpx;
    height: 28rpx;
}

/* 姓名 */

.name-input {
    width: 200rpx;
    border-bottom: 1rpx solid #b2b2b2;
    /* margin-right: 46rpx; */
}

/* 性别 */

.sex-input {
    width: 90rpx;
    border-bottom: 1rpx solid #b2b2b2;
}

/* 手机号 */

.tel-input {
    width: 250rpx;
    border-bottom: 1rpx solid #b2b2b2;
}

/* 密码 */
.pwd-input {
    width: 470rpx;
    border-bottom: 1rpx solid #b2b2b2;
}
.pwd2-input {
    width: 446rpx;
    border-bottom: 1rpx solid #b2b2b2;
}


/* 验证码 */

.code {
    width: 468rpx;
    display: flex;
    border-bottom: 1rpx solid #b2b2b2;
}

.code-input {
    width: 100rpx;
    margin-right: 224rpx;
}

.get-code-btn {
    color: #070707;
    width: 100rpx;
    font-size: 28rpx;
}

/* 年龄 */
.age-input{
    width: 90rpx;
    border-bottom: 1rpx solid #b2b2b2;
}

/* 机构 */

.agency-input {
    width: 460rpx;
    border-bottom: 1rpx solid #b2b2b2;
    /* border: 1rpx solid red; */
}

/* 身高 */

.height-input {
    width: 90rpx;
    border-bottom: 1rpx solid #b2b2b2;
    margin-right: 70rpx;
}

/* 体重 */

.weight-input {
    width: 90rpx;
    border-bottom: 1rpx solid #b2b2b2;
}

/* 吸烟 */
.smoke-input,
.diabetes-input{
    margin-right: 70rpx;
}
