/* 糖尿病 */

/* 高血压 */

.smoke-input, .drink-input, .diabetes-input, .hypertension-input {
    width: 90rpx;
    border-bottom: 1rpx solid #b2b2b2;
}

/* 注册btn */

.btn-area {
    padding: 10rpx 0;
    height: 66rpx;
    width: 496rpx;
    margin-left: 17%;
}

.btn-area button {
    border-radius: 40rpx;
    background-color: #5099ff;
    color: #ffffff;
    font-size: 30rpx;
    border-color: #5099ff;
}
.alignment-control{
    padding-right: 8rpx;
    /* border: 1rpx solid red; */
}

/* 监测员注册 */
.doctor-name-input,
.invite-code-input{
    width: 460rpx;
    border-bottom: 1rpx solid #b2b2b2;
}
.doctor-register-btn{
    margin-top: 74rpx;
}
.doctor-register-item{
    margin-top: 14rpx;
}